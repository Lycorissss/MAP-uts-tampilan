<!-- res/drawable/image_button_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna bayangan -->
            <corners android:radius="16dp" /> <!-- Membuat sudut melengkung -->
        </shape>
    </item>

    <!-- Background layer with border radius -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna putih untuk background -->
            <corners android:radius="16dp" /> <!-- Radius sudut (border radius) -->
        </shape>
    </item>

</layer-list>
